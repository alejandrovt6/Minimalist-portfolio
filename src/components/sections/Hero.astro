---
import { basics } from "@cv"
import Section from "@/components/Section.astro";

const { name, label, image, location, profiles, email } = basics
const { city, region } = location
---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                {city}, {region}
            </span>
            <footer>
                {
                    email && (
                        <a 
                            href={`mailto:${email}`}
                            title={`Send email to ${name} email address ${email}`} 
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            {/* icono */}
                        </a>
                    )
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>
</Section>

